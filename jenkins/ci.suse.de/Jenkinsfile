pipeline {
    agent any
    stages {
        stage('Build Pull Request') {
            agent {
                label 'cloud-testbuild-pr'
            }
            steps {
                sh "scripts/crowbar-testbuild.rb -o ${ghorg} -r ${ghrepo} -p ${pr_str} -c scripts/ardana-testbuild.yaml"
            }
        }
        stage('Build') {
            steps {
                sh "ls /tmp/colleen"
                echo "Building"
            }
        }
        stage('Results') {
            steps {
                echo "Done"
            }
        }
    }
}
