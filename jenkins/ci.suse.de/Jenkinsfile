def test_results = ''
pipeline {
    agent any
    stages {
        stage('Updating test repositories') {
            agent {
                label "openstack-trackupstream"
            }
            steps {
                echo "Updating packages"
                sh "jenkins/ci.suse.de/update-package.sh"
            }
        }
        stage('Running tests') {
            agent {
                label "cloud-ardana-ci"
            }
            steps {
                echo "Setting up test nodes"
                echo "Using Cloud repo: home:comurphy:Fake:Cloud:8:${github_pr}"
                /*
                sh "jenkins/ci.suse.de/setup-nodes.sh"
                */
                script {
                    if(params.emit_success){
                        test_results = 'success'
                    } else {
                        test_results = 'failure'
                    }
                }
            }
        }
        stage('Report results (github)') {
            agent {
                label "cloud-trigger"
            }
            when {
                expression { JOB_NAME ==~ /testbuild PR/ }
            }
            steps {
                sh "~/github.com/openSUSE/github-pr/github_pr.rb -a set-status --status ${test_results} --org ${github_org} --repo ${github_repo} --pr ${github_pr.split(':')[0]} --sha ${github_pr.split(':')[1]} --context 'suse/ardana/testbuild'"
            }
        }
        stage('Report results (OBS)') {
            echo "TODO"
        }
        stage('Accept changes') {
            agent {
                label "openstack-trackupstream"
            }
            when {
                expression { JOB_NAME ==~ /post-merge build/ && test_results == 'success' }
            }
            steps {
                sh "jenkins/ci.suse.de/submit-packages.sh"
            }
        }
    }
}
