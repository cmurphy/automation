def test_results = ''
pipeline {
    agent any
    stages {
        stage('Updating test repositories') {
            agent {
                label "openstack-trackupstream"
            }
            steps {
                echo "Updating packages"
                /*
                sh "jenkins/ci.suse.de/update-package.sh"
                */
            }
        }
        stage('Running tests') {
            agent {
                label "cloud-ardana-ci"
            }
            steps {
                echo "Setting up test nodes"
                echo "Using Cloud repo: home:comurphy:Fake:Cloud:8:${github_pr}"
                /*
                sh "jenkins/ci.suse.de/setup-nodes.sh"
                */
                echo "${emit_success}"
                script {
                    if(params.emit_success){
                        test_results = 'success'
                    } else {
                        test_results = 'failure'
                    }
                }
                echo "$test_results"
            }
        }
        stage('Accept changes') {
            agent {
                label "openstack-trackupstream"
            }
            when {
                expression { test_results == 'success' }
            }
            steps {
                sh "jenkins/ci.suse.de/submit-packages.sh"
            }
        }
    }
}
